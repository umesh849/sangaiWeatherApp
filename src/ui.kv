<WeatherUI>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    canvas.before:
        Color:
            rgba: 1,1,1,1   
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: 60
        spacing: 10
        Image:
            source: "icon.png"
            size_hint: None, None
            size: 70,70
        Label:
            text: root.translations[root.lang]["title"]
            font_name: "NotoSansMeeteiMayek-Medium"
            font_size: "28sp"
            size_hint_y: None
            height: 70
            bold: True
            color: 0,0,0,1
            padding: 15
            text_size: self.width, None
    Widget:
        size_hint_y: None
        height: 40

    Label:
        text: root.translations[root.lang]["forecast"]
        font_name: "NotoSansMeeteiMayek-Medium"
        halign: "left"
        font_size: "24sp"
        size_hint_y: None
        height: 50
        bold: True
        color: 0,0,0,1
        

    ScrollView:
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                padding: 10

                BoxLayout:
                    orientation: "vertical"
                    padding: [25,10,10,10]
                    size_hint: None, None
                    width: root.width * 0.55
                    height: 180
                    pos_hint: {"center_x": 0.5}

                    canvas.before:
                        Color:
                            rgba: 1,0.6,0.8,1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25]


                    Label:
                        text:root.translations[root.lang]["today"]
                        font_name: "NotoSansMeeteiMayek-Medium"
                        bold: True
                        font_size: "18sp"
                        color: 0,0,0,1

                    Label:
                        text:root.translations[root.lang]["temp"] + ": " + str(root.today_temp_max) + "-" + str(root.today_temp_min) +" °C"
                        font_name: "NotoSansMeeteiMayek-Medium"
                        color: 0,0,0,1

                    Label:
                        text:root.translations[root.lang]["rainfall_mm"] + ": " + str(root.today_rainfall_mm)+" mm"
                        font_name: "NotoSansMeeteiMayek-Medium"
                        color: 0,0,0,1

                    Button:
                        text: root.translations[root.lang]["more"]
                        font_name: "NotoSansMeeteiMayek-Medium"
                        size_hint_y: None
                        background_normal: ""
                        background_down: ""
                        color: 0.9,0.2,0.5,1  
                        background_color: 1,1,1,1
                        height: 40
                        on_press: root.show_details("today")
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                padding: 10

                BoxLayout:
                    orientation: "vertical"
                    padding: [25,10,10,10]
                    size_hint: None, None
                    width: root.width * 0.55
                    height: 180
                    pos_hint: {"center_x": 0.5}

                    canvas.before:
                        Color:
                            rgba: 1,0.6,0.8,1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25]


                    Label:
                        text:root.translations[root.lang]["tomorrow"]
                        font_name: "NotoSansMeeteiMayek-Medium"
                        bold: True
                        font_size: "18sp"
                        color: 0,0,0,1

                    Label:
                        text:root.translations[root.lang]["temp"] + ": " + str(root.tomorrow_temp_max) + "-" + str(root.today_temp_min) +" °C"
                        font_name: "NotoSansMeeteiMayek-Medium"
                        color: 0,0,0,1

                    Label:
                        text:root.translations[root.lang]["rainfall_mm"] + ": " + str(root.tomorrow_rainfall_mm)+" mm"
                        font_name: "NotoSansMeeteiMayek-Medium"
                        color: 0,0,0,1

                    Button:
                        text: root.translations[root.lang]["more"]
                        font_name: "NotoSansMeeteiMayek-Medium"
                        size_hint_y: None
                        background_normal: ""
                        background_down: ""
                        color: 0.9,0.2,0.5,1  
                        background_color: 1,1,1,1
                        height: 40
                        on_press: root.show_details("tomorrow")
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                padding: 10

                BoxLayout:
                    orientation: "vertical"
                    padding: [25,10,10,10]
                    size_hint: None, None
                    width: root.width * 0.55
                    height: 180
                    pos_hint: {"center_x": 0.5}

                    canvas.before:
                        Color:
                            rgba: 1,0.6,0.8,1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25]


                    Label:
                        text:root.translations[root.lang]["day_after"]
                        font_name: "NotoSansMeeteiMayek-Medium"
                        bold: True
                        font_size: "18sp"
                        color: 0,0,0,1

                    Label:
                        text:root.translations[root.lang]["temp"] + ": " + str(root.day_after_temp_max) + "-" + str(root.day_after_temp_min) +" °C"
                        font_name: "NotoSansMeeteiMayek-Medium"
                        color: 0,0,0,1

                    Label:
                        text:root.translations[root.lang]["rainfall_mm"] + ": " + str(root.day_after_rainfall_mm)+" mm"
                        font_name: "NotoSansMeeteiMayek-Medium"
                        color: 0,0,0,1

                    Button:
                        text: root.translations[root.lang]["more"]
                        font_name: "NotoSansMeeteiMayek-Medium"
                        size_hint_y: None
                        background_normal: ""
                        background_down: ""
                        color: 0.9,0.2,0.5,1  
                        background_color: 1,1,1,1
                        height: 40
                        on_press: root.show_details("day_after")

    Button:
        text: "Switch Language"
        size_hint_y: None
        height: 40
        on_press: root.switch_lang()
